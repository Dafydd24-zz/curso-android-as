<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Container">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/shape_green_rect</item>
    </style>

    <style name="gradiente">
        <item name="android:background">@drawable/shape_rounded_blue_rect</item>
    </style>

    <style name="PhoneOnly">
        <item name="android:visibility">gone</item>
    </style>

    <style name="TabletOnly">
        <item name="android:visibility">visible</item>
    </style>

    <style name="line">
        <item name="android:background">@drawable/shape_black_line</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">20dp</item>
    </style>

</resources>

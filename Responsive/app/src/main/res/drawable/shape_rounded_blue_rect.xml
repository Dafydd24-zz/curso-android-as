<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="90"
        android:startColor="#55000066"
        android:centerColor="#FFFFFF"
        android:endColor="#55000066"/>

    <stroke
